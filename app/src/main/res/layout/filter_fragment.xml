<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/filter_recipe_block"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/green_200"
        android:fontFamily="@font/inter_semibold"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="@string/filter_recipes"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText
        android:id="@+id/search_restriction"
        android:layout_width="320dp"
        android:layout_height="35dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="@string/search_for_a_restriction_to_add"
        android:inputType="textPersonName"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/filter_recipe_block"
        app:layout_constraintEnd_toEndOf="@+id/filter_recipe_block"
        app:layout_constraintStart_toStartOf="@+id/filter_recipe_block"
        app:layout_constraintTop_toTopOf="@+id/filter_recipe_block"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck"
        android:importantForAutofill="no" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/save_filters"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/pink_a700"
        android:fontFamily="@font/inter_regular"
        android:text="@string/save_filters"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/filter_recipe_block"
        app:layout_constraintEnd_toEndOf="@+id/filter_recipe_block"
        app:layout_constraintStart_toStartOf="@+id/filter_recipe_block"
        app:layout_constraintTop_toTopOf="@+id/filter_recipe_block"
        app:layout_constraintVertical_bias="0.95"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/filter_restriction1"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/green_400"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="test"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/filter_recipe_block"
        app:layout_constraintEnd_toEndOf="@+id/filter_recipe_block"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="@+id/filter_recipe_block"
        app:layout_constraintTop_toTopOf="@+id/filter_recipe_block"
        app:layout_constraintVertical_bias="0.502" />

    <TextView
        android:id="@+id/filter_restriction2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/green_400"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="test2"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/filter_recipe_block"
        app:layout_constraintEnd_toEndOf="@+id/filter_recipe_block"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="@+id/filter_recipe_block"
        app:layout_constraintTop_toTopOf="@+id/filter_recipe_block"
        app:layout_constraintVertical_bias="0.723" />

    <TextView
        android:id="@+id/filter_restriction3"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/green_400"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="test3"
        android:textColor="@color/black"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/filter_recipe_block"
        app:layout_constraintEnd_toEndOf="@+id/filter_recipe_block"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="@+id/filter_recipe_block"
        app:layout_constraintTop_toTopOf="@+id/filter_recipe_block" />

</androidx.constraintlayout.widget.ConstraintLayout>